<h4>Детали поста</h4>

<p>
	<%= @row['content'] %>
	<br />
	<br />
	Добавлено: <%= @row['created_date'] %>
</p>
<br />
<h4>Комментарии:</h4>

<% @comments.each do |comment| %>

	<p>
		<%= comment['content'] %>
	</p>
<% end %>



<p>
	<form action="/details/<%= @row['id'] %>" method="POST" role="form">
	  <textarea name="content" class="form-control" rows="6" style="width: 400px" placeholder="Введите свой текст"></textarea>
	  <br />
	  <button type="submit" class="btn btn-primary">Отправить</button>
	</form>
</p>